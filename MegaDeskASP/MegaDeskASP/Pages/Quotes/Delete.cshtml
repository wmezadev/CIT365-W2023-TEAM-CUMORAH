@page "{id:int}"
@model MegaDeskASP.Pages.Quotes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<!--Gray Zone-->
<div class="gray-zone flex-center" onload="CheckDesktop()">
    <div class="container-desktop">
        <img id="desktop-material" src="/images/Pine.png" alt="Desktop">
        <img id="desktop-drawers" src="/images/drawer-0.png" alt="Drawers">
    </div>
</div>


<!--Yellow Zone-->
<div class="yellow-zone">
    <div class="menu-container">
        <div class="form-cont">
            <h1>Delete</h1>
            <h3 class="sure">Are you sure you want to delete this?</h3>
            <div class="navegation">
                <a asp-page="/Quotes/Index">Back to List</a>
            </div>
            <div class="flex-center">
                <dl class="cont-table">
                    <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.Quote.CustomerName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quote.CustomerName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quote.Width)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quote.Width)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quote.Height)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quote.Height)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quote.SurfaceMaterial)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quote.SurfaceMaterial)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quote.Drawer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quote.Drawer)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quote.ProductionTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quote.ProductionTime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quote.DateCreated)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quote.DateCreated)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quote.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quote.Price)
                </dd>
                </dl>
                <!--Use this inputs to get the material and drawers values and drawing the desk-->
                <input type="text" class="hidden-field" id="material" value="@Html.DisplayFor(model => model.Quote.SurfaceMaterial)" />
                <input type="text" class="hidden-field" id="drawers" value="@Html.DisplayFor(model => model.Quote.Drawer)" />
            </div>

            <form method="post">
                <input type="hidden" asp-for="Quote.Id" />
                <div class="flex-center">
                    <input type="submit" value="Delete" class="btn-delete" />
                </div>
            </form>
        </div>
    </div>
</div>