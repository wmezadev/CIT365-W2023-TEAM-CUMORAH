@model SacramentMeetingPlanner.Models.Planner

@{
    ViewData["Title"] = "Details";
}

<div class="container-secondary">
    <div class="notebook">
        <div class="border-notebook">
            <img class="espiral" src="/images/bordes.png" />
            <img class="espiral" src="/images/bordes.png" />
            <img class="espiral" src="/images/bordes.png" />
            <img class="espiral" src="/images/bordes.png" />
            <img class="espiral" src="/images/bordes.png" />
        </div>
        <div class="cont-details">
            

            <h1>Ward Riverside</h1>

            <div>
                <h4>Sacramental Service Plan</h4>
                <hr />
                <dl class="row width-alternative">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.MeetingDate)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.MeetingDate)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.PresideLeader)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.PresideLeader)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ConductingLeader)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ConductingLeader)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.OpeningSong)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.OpeningSong)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.OpeningPray)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.OpeningPray)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.SacramentHymn)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.SacramentHymn)
                    </dd>
                    <p>Passing of the sacrament by the Aaronic priesthood </p>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Speeches)
                    </dt>
                    <dd class="col-sm-6">
                        @if (Model.Speeches != null && Model.Speeches.Count > 0)
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Speeches.FirstOrDefault().Speaker)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Speeches.FirstOrDefault().SpeachTopic)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Speeches)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Speaker.FullName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SpeachTopic.TopicName)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <span>No speeches</span>
                        }
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ClosingSong)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ClosingSong)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ClosingPray)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ClosingPray)
                    </dd>
                </dl>
            </div>


        </div>
    </div>
    <div class="column-right">
        <div>
            <img src="/images/logo-header.png"/>
        </div>
        <div class="actions">
            <p class="menu-details"><a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a></p>
            <p class="menu-details"><a asp-action="Delete" asp-route-id="@Model?.Id">Delete</a></p>
            <p class="menu-details"><a asp-action="Index">Back to List</a></p>
        </div>
        <div class="delete-part">

        </div>
    </div>
</div>
